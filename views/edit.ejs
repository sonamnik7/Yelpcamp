<%- include ("partials/header") %>
<div class="container pt-5">
	<h1>
	Edit Campground
	</h1>
<form action="/clist/<%=cg._id%>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="name">Title</label>
    <input type="text" name="camp[name]" class="form-control" id="name" value="<%=cg.name%>">
  </div>
  <div class="form-group">
    <label for="img">Image</label>
    <input type="text" name="camp[image]" class="form-control" id="img"  value="<%=cg.image%>">
  </div>
	 <div class="form-group">
    <label for="content">Description</label>
    <textarea class="form-control" name="camp[content]" id="content" rows="3"><%=cg.content%></textarea>
  </div>
  <div class="form-group">
    <label for="img">Cost</label>
  <input class="form-control" type="number" name="camp[cost]" value="<%= cg.cost %>" step="0.01" min="0" required>
</div>
<div class="form-group">
  <label for="img">Phone Number</label>
  <input class="form-control" type="number" name="camp[phone]" value="<%= cg.phone %>" step="1" min="100" required>
</div>
<div class="form-group">
  <label for="img">Season start</label>
  <input class="form-control" type="text" name="camp[start]" value="<%= cg.start %>"  required>
</div>
<div class="form-group">
  <label for="img">Season end</label>
  <input class="form-control" type="text" name="camp[end]" value="<%= cg.end %>"  required>
</div>
  <button type="submit" class="btn btn-outline-secondary">Submit</button>
	<a href="/clist/<%=cg._id%>" class="btn btn-outline-secondary btn-sm" style="border:none">Back</a>
</form>
</div>

<%- include ("partials/footer") %>
