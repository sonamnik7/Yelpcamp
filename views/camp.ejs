<%- include("partials/header") %>
<div class="jumbotron ">
	<div class="container">
  		<h1 class="display-4">YELPCAMP</h1>
  		<p class="lead">Camp guide.</p>
	</div>
    <hr class="my-4">
	<div class="container">
  		<p class="lead">Find the best CampGround for your next adventure.</p>
		<a href="/clist/new" class="btn btn-dark">Add New</a>
	</div>
</div>
<div class="container">
<div class="row">
	
	
<% c.forEach((cg)=>{ %>
<div class=" col-sm-12 col-md-6 col-lg-4 justify-content-center">
	
	
<div class=" card border-dark mb-3 mx-auto" style="max-width: 20rem;">
	  <img src="<%=cg.image%>" class="card-img-top img-thumbnail">
  	  <div class="card-body text-dark">

			  <p>
				  
			  <span class="badge label-primary" style="color:red;"><i class="fas fa-thumbs-up"></i>       <%= cg.likes.length %></span>

	  	 <a href="/clist/<%= cg._id %>" class="btn btn-outline-secondary btn-sm justify-content-center" style="border:none"><b><%= cg.name %></b></a></p>
  	  </div>
</div>
</div>
<% }); %>
</div>
	<nav aria-label="Page navigation">
    <% if (pages && pages > 0) { %>
    <ul class="pagination justify-content-center">
        <% if (current == 1) { %>
        <li class="page-item disabled"><a class="page-link">First</a></li>
        <% } else { %>
        <li><a class="page-link" href="/clist">First</a></li>
        <% } %>
 
        <% if (current == 1) { %>
        <li class="page-item disabled"><a class="page-link">«</a></li>
        <% } else { %>
        <li><a class="page-link" href="/clist?page=<%= Number(current) - 1 %>">«</a></li>
        <% } %>
 
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <li class="page-item disabled"><a class="page-link">...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <li class="active"><a class="page-link"><%= i %></a></li>
        <% } else { %>
        <li><a class="page-link" href="/clist?page=<%= i %>"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <li class="page-item disabled"><a class="page-link">...</a></li>
        <% } %>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="page-item disabled"><a class="page-link">»</a></li>
        <% } else { %>
        <li><a class="page-link" href="/clist?page=<%= Number(current) + 1 %>">»</a></li>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="page-item disabled"><a class="page-link">Last</a></li>
        <% } else { %>
        <li><a class="page-link" href="/clist?page=<%= pages %>">Last</a></li>
        <% } %>
    </ul>
    <% } %>
</nav>
</div>
<%- include("partials/footer") %>
